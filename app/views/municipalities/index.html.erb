<h1>Municipalities</h1>

<table>
  <thead>
    <tr>
      <th>Código de Departamento</th>
      <th></th>
      <th>Código de Municipio</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @municipalities.each do |municipality| %>
      <tr>
        <td><%= municipality.Department.id %></td>
        <td><%= municipality.Department.description %></td>
        <td><%= municipality.num_municip %></td>
        <td><%= municipality.description %></td>
        <td><%= link_to 'Show', municipality %></td>
        <td><%= link_to 'Edit', edit_municipality_path(municipality) %></td>
        <td><%= link_to 'Destroy', municipality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

