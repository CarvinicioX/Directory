<p id="notice"><%= notice %></p>

<h1>Sub Sectores</h1>

<table>
  <thead>
    <tr>
      <th>Código de Sector</th>
      <th>Código Sub Sector</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_sectors.each do |sub_sector| %>
      <tr>
        <td><%= sub_sector.Sector.num_sector %></td>
        <td><%= sub_sector.num_subsector %></td>
        <td><%= sub_sector.description %></td>
        <td><%= link_to 'Mostrar', sub_sector %></td>
        <td><%= link_to 'Modificar', edit_sub_sector_path(sub_sector) %></td>
        <td><%= link_to 'Eliminar', sub_sector, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

